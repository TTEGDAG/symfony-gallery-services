<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Hosting zdjęć - {% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="{{ asset('assets/js/jquery-3.4.1.slim.min.js') }}"></script>
            <script src="{{ asset('assets/js/poper.min.js') }}"></script>
            <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </head>
    <body>
    <!-- NAV -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="{{ path('index') }}">Uploader</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor02">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link {% if app.request.get('_route') == 'index' %}active{% endif %}" href="{{ path('index') }}">Strona główna</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Najnowsze</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Moje zdjęcia</a>
        </li>
        {% if app.user %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_logout') }}">Wyloguj się</a>
        </li>
        {% else %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_login') }}">Zaloguj się</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('app_register') }}">Zarejestruj się</a>
        </li>
        {% endif %}
      </ul>
    </div>
  </div>
</nav>
        <!-- CONTENT -->
        {% block content %}{% endblock %}
            <!-- FOOTER -->
    <footer>
        <div class="pt-3 pb-3 bg-secondary">
        <snap class="d-block text-center text-white"> Symfony nauka - Image Host </snap>
        </div>
    </footer>
    </body>
</html>
